<div class="top">
  <h1>My Displays</h1>
  <% @displays.where(:user_id => session[:current_user_id]).each do |display| %>
</div>
<div class="content">
  <h3>
    <%= display.display_name %>
    <%= link_to "Edit", display_path(display) %>
    <%= link_to "Destroy", display_path(display), method: :delete %>
  </h3>
</div>
<% end %>
